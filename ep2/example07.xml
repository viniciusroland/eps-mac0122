    <ingrediente quantidade="3" unidade="xicaras">Farinha</ingrediente>
    <ingrediente quantidade="7" unidade="gramas">Fermento</ingrediente>
    <ingrediente quantidade="1.5" unidade="xicaras" estado="morna">Agua</ingrediente>
